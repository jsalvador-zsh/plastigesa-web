---
import FacebookIcon from "../icons/Facebook.astro";
import InstagramIcon from "../icons/Instagram.astro";
---

<footer class="bg-white dark:bg-gray-900">
    <div class="w-full max-w-screen-xl mx-auto p-4 py-6 lg:py-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <a href="/" class="flex items-center mb-2 sm:mb-0 space-x-3 rtl:space-x-reverse">
                <img src="/img/plastigesa.webp" class="h-8" alt="Plastigesa Logo" />
            </a>
            <ul class="flex flex-wrap items-center mb-2 text-gray-900 sm:mb-0 dark:text-gray-400">
                <li>
                    <a href="/#nosotros" class="hover:text-secondary dark:text-gray-400 me-4 md:me-6">Sobre nosotros</a>
                </li>
                <li>
                    <a href="/#productos" class="hover:text-secondary dark:text-gray-400 me-4 md:me-6">Productos</a>
                </li>
                <li>
                    <a href="/#atencion" class="hover:text-secondary dark:text-gray-400 me-4 md:me-6">Atención</a>
                </li>
                <li>
                    <a href="/#contacto" class="hover:text-secondary dark:text-gray-400">Contacto</a>
                </li>
            </ul>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
        <div class="sm:flex sm:items-center sm:justify-between">
            <span class="text-gray-500 sm:text-center dark:text-gray-400">© 2024 <a href="/" class="hover:underline">Plastigesa</a>. Todos los derechos reservados.</span>
            <div class="flex mt-4 sm:justify-center sm:mt-0">
                <a href="https://www.facebook.com/Plastigesa.Peru" class="text-gray-900 hover:text-secondary dark:hover:text-white" target="_blank">
                    <FacebookIcon class="size-6"/>
                    <span class="sr-only">Facebook page</span>
                </a>
                <a href="https://www.instagram.com/plastigesa.pe" class="text-gray-900 hover:text-secondary dark:hover:text-white ms-5" target="_blank">
                    <InstagramIcon class="size-6"/>
                    <span class="sr-only">Discord community</span>
                </a>
            </div>
        </div>
    </div>
</footer>

